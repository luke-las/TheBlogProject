@model TheBlogProject.Models.Post
@using TheBlogProject.Enums
@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data" class="row gy-4 gx-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BlogId" class="control-label"></label>
                <select asp-for="BlogId" class="form-control" asp-items="ViewBag.BlogId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abstract" class="control-label"></label>
                <textarea asp-for="Abstract" class="form-control"></textarea>
                <span asp-validation-for="Abstract" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label>Manage Tags</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="row mb-2">
                            <div class="col">
                                <input type="text" class="form-control" id="TagEntry" />
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col d-grid gap-2">
                                <button onclick="AddTag()" name="Add" type="button" class="btn btn-dark">Add</button>
                            </div>
                            <div class="col d-grid gap-2">
                                <button onclick="DeleteTag()" name="Delete" type="button" class="btn btn-dark">Delete</button>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <select class="w-100" name="TagValues" id="TagList" multiple></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ReadyStatus" class="control-label"></label>
                <select asp-for="ReadyStatus" asp-items="@Html.GetEnumSelectList<ReadyStatus>()" class="form-control"></select>
                <span asp-validation-for="ReadyStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group d-grid gap-2">
                <button type="submit" class="btn btn-dark btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>
<br />

@section Scripts {


    <script>
        let tagValues = '@ViewData["TagValues"]';

    tinymce.init({
      selector: '#Content'
    });
    </script>

    <script src="~/js/Custom.js"></script>

}

